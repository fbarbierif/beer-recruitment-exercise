<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="@dimen/dimen_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_2"
    app:cardElevation="@dimen/dimen_2"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="@dimen/dimen_0">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_20">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/dimen_20_sp"
            android:layout_marginBottom="@dimen/dimen_20"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold">
        </TextView>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageView"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_marginBottom="@dimen/dimen_20"
            app:actualImageScaleType="fitCenter"
            app:placeholderImage="@drawable/placeholder_beer"
            app:placeholderImageScaleType="fitXY"/>

        <TextView
            android:id="@+id/tvTagline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/dimen_15_sp"
            android:maxLines="2"
            android:layout_marginBottom="@dimen/dimen_10"
            android:ellipsize="end"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic">
        </TextView>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/dimen_15_sp"
            android:maxLines="5"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/dimen_10"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal">
        </TextView>

        <TextView
            android:id="@+id/tvABV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/dimen_18_sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold">
        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>